import os
import subprocess
import sys


def mkdir_safe(path):
	try: 
		os.makedirs(path)
	except OSError:
		if not os.path.isdir(path):
			raise

def call(args):
	print(" ".join(args))
	return_code = subprocess.call(args)	
	if return_code != 0:
		print("Exited with return code: " + str(return_code))
		sys.exit(return_code)

def go():
	os.chdir(os.environ["OGLT_SOURCE_ROOT"])
        os.environ["MAVEN_OPTS"] = os.environ.get("MAVEN_OPTS", "") + " -XX:+TieredCompilation -XX:TieredStopAtLevel=1 "
	call(["mvn", "-Dmaven.test.skip=true", "-am", "-pl", "graphicsfuzz", "package"])

if __name__ == "__main__":
	go()


