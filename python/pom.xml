<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>python</artifactId>
  <name>python</name>
  <packaging>pom</packaging>

  <parent>
    <groupId>com.graphicsfuzz</groupId>
    <artifactId>parent-all</artifactId>
    <version>1.0</version>
    <relativePath>../parent-all/pom.xml</relativePath>
  </parent>

  <dependencies>
    <dependency>
      <groupId>ant-contrib</groupId>
      <artifactId>ant-contrib</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>run-ant</id>
            <phase>compile</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <taskdef resource="net/sf/antcontrib/antcontrib.properties"
                         classpath="${ant-contrib:ant-contrib:jar}"/>

                <property name="python-source" value="${project.basedir}/src/main/python"/>
                <property name="python-zip"
                          value="${project.build.directory}/${project.artifactId}-${project.version}.zip/"/>

                <outofdate>
                  <sourcefiles>
                    <fileset dir="${python-source}"/>
                  </sourcefiles>
                  <targetfiles>
                    <pathelement location="${python-zip}"/>
                  </targetfiles>
                  <sequential>
                    <delete file="${python-zip}"/>
                    <zip destfile="${python-zip}" compress="false">
                      <zipfileset dir="${python-source}" filemode="755"/>
                    </zip>
                  </sequential>
                </outofdate>

                <attachartifact file="${python-zip}" type="zip"/>
              </target>
            </configuration>
          </execution>

        </executions>
      </plugin>

    </plugins>
  </build>

</project>