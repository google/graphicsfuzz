if test -n "${PYTHON_GF}"; then
  "${PYTHON_GF}" ${BASH_SOURCE}.py "$@"
elif type -P python3 >/dev/null; then
  python3 ${BASH_SOURCE}.py "$@"
elif type -P py >/dev/null; then
  py -3 ${BASH_SOURCE}.py "$@"
else
  python ${BASH_SOURCE}.py "$@"
fi