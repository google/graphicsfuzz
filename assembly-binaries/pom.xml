<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>assembly-binaries</artifactId>
  <name>assembly-binaries</name>
  <packaging>pom</packaging>

  <parent>
    <groupId>com.graphicsfuzz</groupId>
    <artifactId>parent-all</artifactId>
    <version>1.0</version>
    <relativePath>../parent-all/pom.xml</relativePath>
  </parent>

  <repositories>
    <repository>
      <id>build-SPIRV-Tools</id>
      <url>https://github.com/paulthomson/build-SPIRV-Tools/releases/download</url>
    </repository>

  </repositories>

  <properties>
    <spirv-tools-version>7663d620a7fbdccb330d2baec138d0e3e096457c</spirv-tools-version>
  </properties>

  <dependencies>

    <dependency>
      <groupId>github.paulthomson</groupId>
      <artifactId>build-SPIRV-Tools</artifactId>
      <version>${spirv-tools-version}</version>
      <classifier>Linux_x64_Release</classifier>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>github.paulthomson</groupId>
      <artifactId>build-SPIRV-Tools</artifactId>
      <version>${spirv-tools-version}</version>
      <classifier>Mac_x64_Release</classifier>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>github.paulthomson</groupId>
      <artifactId>build-SPIRV-Tools</artifactId>
      <version>${spirv-tools-version}</version>
      <classifier>Windows_x64_Release</classifier>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>com.graphicsfuzz</groupId>
      <artifactId>shaders</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.github.mc-imperial</groupId>
      <artifactId>ogltesting-binaries</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>ant-contrib</groupId>
      <artifactId>ant-contrib</artifactId>
      <scope>provided</scope>
    </dependency>


  </dependencies>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>run-ant</id>
            <phase>compile</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <taskdef resource="net/sf/antcontrib/antcontrib.properties" classpath="${ant-contrib:ant-contrib:jar}"/>

                <property name="binaries-zip" value="${com.github.mc-imperial:ogltesting-binaries:zip}"/>
                <property name="shaders-zip" value="${com.graphicsfuzz:shaders:zip}"/>


                <property name="assembly-zip" value="${project.build.directory}/${project.artifactId}-${project.version}.zip"/>
                <property name="assembly-dir" value="${project.build.directory}/${project.artifactId}-${project.version}"/>

                <property name="touched-file" value="${project.build.directory}/touched.txt"/>

                <outofdate>
                  <sourcefiles>
                    <pathelement location="${binaries-zip}"/>
                    <pathelement location="${shaders-zip}"/>

                    <pathelement
                        location="${github.paulthomson:build-SPIRV-Tools:zip:Windows_x64_Release}"/>
                    <pathelement
                        location="${github.paulthomson:build-SPIRV-Tools:zip:Mac_x64_Release}"/>
                    <pathelement
                        location="${github.paulthomson:build-SPIRV-Tools:zip:Linux_x64_Release}"/>
                  </sourcefiles>
                  <targetfiles path="${touched-file}"/>
                  <sequential>
                    <delete file="${assembly-zip}" dir="${assembly-dir}"/>
                    <zip destfile="${assembly-zip}" compress="false">
                      <zipfileset src="${shaders-zip}" prefix="shaders"/>

                      <!-- github.paulthomson:build-SPIRV-Tools:zip:... -->
                      <mappedresources>
                        <zipfileset
                            src="${github.paulthomson:build-SPIRV-Tools:zip:Linux_x64_Release}"
                            includes="bin/*"
                        />
                        <globmapper from="bin/*" to="bin/Linux/*"/>
                      </mappedresources>

                      <mappedresources>
                        <zipfileset
                            src="${github.paulthomson:build-SPIRV-Tools:zip:Mac_x64_Release}"
                            includes="bin/*"
                        />
                        <globmapper from="bin/*" to="bin/Mac/*"/>
                      </mappedresources>

                      <mappedresources>
                        <zipfileset
                            src="${github.paulthomson:build-SPIRV-Tools:zip:Windows_x64_Release}"
                            includes="bin/*"
                        />
                        <globmapper from="bin/*" to="bin/Windows/*"/>
                      </mappedresources>

                    </zip>
                    <unzip src="${assembly-zip}" dest="${assembly-dir}"/>
                    <chmod perm="ugo+x" dir="${assembly-dir}/bin" includes="**" />
                    <touch file="${touched-file}"/>
                  </sequential>
                </outofdate>

                <attachartifact file="${assembly-zip}" type="zip"/>
              </target>
            </configuration>
          </execution>

        </executions>
      </plugin>

    </plugins>
  </build>

</project>
